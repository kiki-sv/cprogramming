#include <stdio.h>
int main()
{
	double num;
	
	printf("Enter a number: ");
	scanf("%lf", &num);
	
	if (num > 0.0)
	{
		printf("The number %lf you entered is positive.", num);
	}
	else if (num < 0.0)
	{
		printf("The number %lf you entered is negative.", num);
	}
	else 
	{
		printf("The number %lf you entered is equal to 0.", num);
	}
	
	return 0;
}
