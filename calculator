#include <stdio.h>
int main()
{
	double num1, num2;
	char operator;
	const int MaxNumber = 50;
	int i;
	
	printf("Enter two numbers: ");
	scanf("%lf %lf",&num1, &num2);
	
	printf("Enter an operator (+,-,*,/,%, ^): ");
	scanf("%c", &operator);
	
	switch (operator)
	{
		case "+":
			printf("%lf + %lf = %lf", num1, num2, num1 + num2);
			break;
			
		case "-":
			printf("%lf-%lf= %lf", num1, num2, num1 - num2);
			break;
			
		case "*":
			printf("%lf * %lf = %lf", num1, num2, num1 * num2);
			break;
			
		case "/":
			printf("%lf/ %lf = %lf", num1, num2, num1 / num2);
			break;
			
		case "%":
			printf("%lf % %lf = %lf", num1, num2, num1 % num2);
			break;
			
		case "^":
			printf("%lf ^ %lf =%lf", num1, num2, num1 ^ num2);
			break;
			
	}
